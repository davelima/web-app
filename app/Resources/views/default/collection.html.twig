{% extends 'main.html.twig' %}

{% block title %}{{ collection.name }} ~ dev-human{% endblock %}

{% block body %}
    <div class="slider">
        <div class="carousel-inner">
            <div class="item active">
                <!-- 1920 x 420 image -->
                <img src="{{ asset(collection.getImage|default('images/collections/devhuman_collection.jpg')) }}" alt="Slider">
                <div class="carousel-caption">

                    <div class="slider__container">
                        <h1 class="slider__title">{{ collection.name }}</h1>
                        <h3 class="slider__subtitle">{{ collection.description }}</h3>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="container">
    <div class="row">
    <div class="col-xs-12">

  {% if stories is defined %}
    {% for story in stories %}
        <!-- Post without featured image -->
        <div class="boxed  push-down-45">
            <!-- Meta without image start (Needed for WP theme)-->
            <div class="meta">
                <div class="row">
                    <div class="col-xs-12  col-sm-8  col-sm-offset-2">
                        <div class="meta__container--without-image">
                            <div class="row">
                                <div class="col-xs-12  col-sm-8">
                                    <div class="meta__info">
                                        <span class="meta__author">
                                  <a href="{{ path('devhuman_user', {user: story.author.username}) }}" title="{{ story.author.name }}'s Profile"><img src="{{ gravatar(story.author.email, 30) }}" alt="{{ story.author.name }}" width="30" height="30"></a> <a href="{{ path('devhuman_user', {user: story.author.username}) }}" title="{{ story.author.name }}'s Profile">{{ story.author.name }}</a>
                                  {% if story.collections %}in
                                    {% for collection in story.collections %}
                                      {% if loop.index != 1 %}, {% endif %}<a href="#">{{ collection.name }}</a>
                                    {% endfor %}
                                  {% endif %}</span>
                                        <span class="meta__date"><span class="glyphicon glyphicon-calendar"></span> {{ story.created|date('F d, Y') }}</span>
                                    </div>
                                </div>
                                <div class="col-xs-12  col-sm-4">
                                    <div class="meta__comments">
                                        <span class="glyphicon glyphicon-comment"></span> &nbsp; <a href="{{ path('devhuman_show_article', {slug: story.slug}) }}#disqus_thread"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Meta without image end -->
            <!-- Start of the blogpost -->
            <div class="row">
                <div class="col-xs-10  col-xs-offset-1  col-sm-8  col-sm-offset-2">
                    <!-- Start of the content -->
                    <div class="post-content--front-page">
                        <h2 class="front-page-title"><a href="{{ path('devhuman_show_article', {slug: story.slug}) }}">{{ story.title }}</a></h2>
                       <p>{{ story.preview|default(story.getHTMLContent()|striptags|truncate(240)) }}</p>
                    </div>
                    <!-- End of the content -->
                    <a href="{{ path('devhuman_show_article', {slug: story.slug}) }}">
                        <div class="read-more">
                            Continue reading
                            <div class="read-more__arrow">
                                <span class="glyphicon  glyphicon-chevron-right"></span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
      {% else %}
      <p>We couldn't find any posts matching this criteria.</p>
    {% endif %}
    </div></div>
    </div><!-- container -->

{% endblock %}